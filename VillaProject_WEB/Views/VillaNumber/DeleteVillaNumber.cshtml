@model VillaProject_WEB.Models.DTO.VillaNumberDeleteDTO

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border">
        <h1 class="text-primary">Update Villa Number</h1>
        <hr />
        <div class="row pb-3">

            <div class="col-2">
                <label asp-for="VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNo" readonly class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaId" type="hidden" readonly class="form-control"></input>
                <input asp-for="Villa.Name" readonly class="form-control"></input>
            </div>

            <div class="col-2 ">
                <label asp-for="SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="SpecialDetails" readonly class="form-control" rows="5" style="margin-top:20px"></textarea>
            </div>
            <div class="col-5 offset-2" pb-3>
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5" pb-3>
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_validationScriptsPartial" />
}
