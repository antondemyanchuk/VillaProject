@using Newtonsoft.Json
@model VillaProject_WEB.Models.DTO.VillaNumberCreateDTO;

<form asp-action="CreateVillaNumber">
	<br />
	<div class="container border">
		<h1 class="text-primary">Create Villa Number</h1>
		<hr />
		<div class="row pb-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="col-2">
				<label asp-for="VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="@Model.VillaNo" class="form-control" />
				<span asp-validation-for="VillaNo" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="@Model.VillaId" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<select asp-for="VillaId" asp-items="ViewBag.Villas" class="form-control" />
				<span asp-validation-for="VillaId" class="text-danger"></span>
			</div>

			<div class="col-2 ">
				<label asp-for="SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<textarea asp-for="@Model.SpecialDetails" class="form-control" rows="5" style="margin-top:20px"></textarea>
				<span asp-validation-for="SpecialDetails" class="text-danger"></span>
			</div>
			<div class="col-5 offset-2" pb-3>
				<a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back to List</a>
			</div>
			<div class="col-5" pb-3>
				<input type="submit" value="Create" class="btn btn-success form-control" />
			</div>

		</div>
	</div>
</form>

@section Scripts {
	<partial name="_validationScriptsPartial" />
}
